<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainLayout"
    tools:context="br.edu.ifsp.hto.exemplo12.MainActivity">

    <Button
        android:id="@+id/btAutoCompleteView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickBtAutoCompleteView"
        android:text="AutoCompleteView"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btAdapterInflateActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickBtAdapterInflateActivity"
        android:text="AdapterInflateActivity"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btImageButtonActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickBtImageButtonActivity"
        android:text="ImageButton"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btCheckToggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="onClickBtCheckToggleButtonActivity"
        android:text="Check e Toggle Button"
        android:textAllCaps="false" />


</LinearLayout>
